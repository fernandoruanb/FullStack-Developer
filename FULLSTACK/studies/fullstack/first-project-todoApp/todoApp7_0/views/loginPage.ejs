<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Sign In</title>
	</head>
	<body>
		<main>
			<header>
				<nav>
					<a href="/register">Sign Up</a>
				</nav>
			</header>
			<section>
				<h2>Sign In</h2>
			</section>
			<section>
				<% if (success && success.length > 0) { %>
					<% success.forEach(suc => { %>
						<p style="color: green"> <%= suc %> </p>
					<% }) %>
				<% } %>

				<% if (message && message.length > 0) { %>
					<% message.forEach(mes => { %>
						<p style="color: red"> <%= mes %> </p>
					<% }) %>
				<% } %>

				<form action="/login" method="POST">
					<label>Email:</label><br>
					<input type="email" name="email" placeholder="Insert your email here" required><br><br>
					<label>Password:</label><br>
					<input type="password" name="password" placeholder="Insert your password here" required><br><br>
					<img src="/getCaptcha" alt="CAPTCHA"><br>
					<input type="text" name="captchaInput" placeholder="Type the captcha" required><br><br>
					<button type="submit">Submit</button>
				</form>
			</section>
			<footer>
				<h6>Keysoft Softwares</h6>
			</footer>
		</main>
	</body>
</html>
